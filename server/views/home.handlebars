<style>
  img {
    max-width:80px;
  }
</style>

<div class="container">
  <h1>Welcome {{user.username}}</h1>
  <ul>
  {{#each songs}}
    <li class="track-li">
      <div class="track-wrapper" data-song-id="{{this.file}}">
        <div class="track-img-container">
          <img src="{{this.img}}">
        </div>
        <div class="track-info">
          <p><span>{{this.name}}</span></p>
          <a href="/profile/{{this.artist}}">{{this.artist}}</a>
          <a href="/album/{{this.album.name}}">{{this.album.name}}, {{this.album.year}}</a>
          <div class="track-length">
            <p class="track-duration"></p>
          </div>
        </div>
      </div>
    </li>
  {{/each}}
  </ul>
</div>

